<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">


    <changeSet id="create_user_table" author="mandeepa">

        <createTable tableName="user">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>

            <column name="user_name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="phone_number" type="VARCHAR(50)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="dob" type="VARCHAR(50)"/>

            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>

            <column name="user_type" type="VARCHAR(50)"/>
        </createTable>

    </changeSet>


    <changeSet id="create_specialization_table" author="mandeepa">

        <createTable tableName="specialization">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

        </createTable>

    </changeSet>


    <changeSet id="create_doctor_table" author="mandeepa">

        <createTable tableName="doctor">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="user_id" type="INT">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="reg_no" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="specialization_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="years_of_exp" type="INT"/>
            <column name="bio" type="VARCHAR(255)"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="doctor"
                baseColumnNames="user_id"
                constraintName="fk_doctor_user"
                referencedTableName="user"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="doctor"
                baseColumnNames="specialization_id"
                constraintName="fk_doctor_specialization"
                referencedTableName="specialization"
                referencedColumnNames="id"/>

    </changeSet>


    <changeSet id="create_patient_table" author="mandeepa">

        <createTable tableName="patient">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="user_id" type="INT">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="phone" type="VARCHAR(50)"/>
            <column name="dob" type="VARCHAR(50)"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="patient"
                baseColumnNames="user_id"
                constraintName="fk_patient_user"
                referencedTableName="user"
                referencedColumnNames="id"/>

    </changeSet>


    <changeSet id="create_appointment_table" author="mandeepa">

        <createTable tableName="appointment">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="patient_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="doctor_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="start_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="end_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="notes" type="VARCHAR(1000)"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="appointment"
                baseColumnNames="patient_id"
                constraintName="fk_appointment_patient"
                referencedTableName="patient"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="appointment"
                baseColumnNames="doctor_id"
                constraintName="fk_appointment_doctor"
                referencedTableName="doctor"
                referencedColumnNames="id"/>

        <createIndex indexName="idx_appt_doctor_start" tableName="appointment">
            <column name="doctor_id"/>
            <column name="start_time"/>
        </createIndex>

        <createIndex indexName="idx_appt_patient_start" tableName="appointment">
            <column name="patient_id"/>
            <column name="start_time"/>
        </createIndex>

    </changeSet>

    <changeSet id="create_prescription_table" author="mandeepa">

        <createTable tableName="prescription">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="appointment_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="diagnosis" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>

            <column name="advice" type="VARCHAR(2000)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP"/>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="prescription"
                baseColumnNames="appointment_id"
                constraintName="fk_prescription_appointment"
                referencedTableName="appointment"
                referencedColumnNames="id"/>

    </changeSet>

    <changeSet id="alter_appointment_time_columns" author="mandeepa">
        <modifyDataType tableName="appointment" columnName="start_time" newDataType="TIMESTAMP"/>
        <modifyDataType tableName="appointment" columnName="end_time" newDataType="TIMESTAMP"/>
    </changeSet>

    <changeSet id="change_data_type_to_datetime" author="mandeepa">
        <modifyDataType tableName="appointment" columnName="start_time" newDataType="DATETIME"/>
        <modifyDataType tableName="appointment" columnName="end_time" newDataType="DATETIME"/>
    </changeSet>


</databaseChangeLog>
